generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id              String   @id @default(uuid())
  nome            String
  telefone        String
  email           String   @unique
  endereco        String
  data_nascimento String
  status          Int
  data_inscricao  DateTime @default(now()) 
  @@map("aluno")
}

model Personal {
  id         String   @id @default(uuid())
  nome       String
  telefone   String
  email      String   @unique
  CREF       String   @unique
  sexo       String
  senha      String
  create_at  DateTime? @default(now())
  update_at  DateTime? @default(now())
  @@map("Personal")
}

model Treino {
  id          String   @id @default(uuid())
  nome_treino String
  repeticao   String
  descanso     String
  series      String
  rotinas     Rotina[] @relation("TreinoRotina") 
}

model Rotina {
  id          String   @id @default(uuid())
  dia_semana  String
  descricao   String
  treinos     Treino[] @relation("TreinoRotina") 
  exercicio     Exercicio[] @relation("exercicioRotina") 
}

model Exercicio {
  id             String    @id @default(uuid())
  nome_exercicio String
  descricao      String
  URL_video      String
   rotina     Rotina[] @relation("exercicioRotina") 
  @@map("exercicio")
}
